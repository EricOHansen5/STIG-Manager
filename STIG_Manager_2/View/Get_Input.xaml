<Window x:Class="STIG_Manager_2.View.Get_Input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STIG_Manager_2.View"
        mc:Ignorable="d"
        Title="Get_Input" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <Label x:Name="lblStatement" Content="Enter Data:"/>
        <TextBox x:Name="txtData" Margin="10,0,10,10" LostFocus="txtData_LostFocus"/>
        <UniformGrid Columns="2" Margin="10">
            <Button Content="Cancel" Margin="10,0" Padding="10,1" Click="Button_Click"/>
            <Button Content="Submit" Margin="10,0" Padding="10,1" Click="Submit_Click"/>
        </UniformGrid>
    </StackPanel>
</Window>
